#!/usr/bin/env bash
set -euo pipefail
hie_bios_flags() {
  bazel build //tests:hie-bios \
    --output_groups=hie_bios \
    --experimental_show_artifacts \
    2>&1 \
    | awk '
      /^>>>/ {
        while ((getline line < substr($1, 4)) > 0) {
          print line
        }
      }'
}
if [[ -z "${HIE_BIOS_OUTPUT-}" ]]; then
  hie_bios_flags
else
  hie_bios_flags >"$HIE_BIOS_OUTPUT"
fi
